<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<p>Pokemon:</p> 
	<ul>
		<% if @trainer.pokemons == [] %>
			<div> They don't have Pokemon in their party! </div>
		<% else %>
			<% @trainer.pokemons.each do |pokemon| %>
				<li> 
					<%= pokemon.name %>: level <%= pokemon.level %>, health <%= pokemon.health %> 
					<%= button_to "Damage!", damage_path(id: pokemon.id), :class => "button medium", :method => :patch %> 
				</li>
			<% end %>
		<% end %>
	</ul>

<% if @trainer.id == current_trainer.id %>
	<%= button_to "New", new_pokemon_path, :class => "button medium", :method => :get %>
<% end %>

